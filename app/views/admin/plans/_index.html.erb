<div class="container mx-auto">
  <div class="row">
    <% plans.each do |plan| %>

      <div class="col-sm-12 col-md-10 col-lg-8 px-sm-0 bg-white my-3 p-4 shadow-lg mx-auto rounded">
        <div class="row">
          <div class="col-3">
            <%= image_tag plan.user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
            <div class="text-center"><%= link_to plan.user.name, edit_admin_user_path(plan.user) %></div>
          </div>
          <div class="col mx-4 my-auto">
            <%= link_to admin_plan_path(plan) do %>
              <h5><%= plan.title %></h5>
            <% end %>
            <%=safe_join(plan.body.split("\n"),tag(:br)) %>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>
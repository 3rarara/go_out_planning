<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-12 col-md-10 col-lg-8 bg-white my-3 p-4 shadow-lg mx-auto rounded">

      <div class="row">
        <div class="col-4">
          <%= image_tag @plan.user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
          <div class="text-center mb-1"><%= link_to @plan.user.name, user_path(@plan.user) %></div>
        </div>
        <div class="col my-auto">
          <h5><%= @plan.title %></h5>
          <%=safe_join(@plan.body.split("\n"),tag(:br)) %>
        </div>
      </div>

      <% @plan_details.each do |plan_detail| %>
      <div class="row my-3">
        <div class="col p-3" style="background-color: #CDD3E8;"><%= plan_detail.title %></div>
        <div class="col p-3" style="background-color: #CDD3E8;"><%= plan_detail.body %></div>
      </div>
      <% end %>

      <div class="row">
        <div class="col"><%= @plan.comments.count %>コメント</div>
        <% if @plan.liked_by?(current_user) %>
        <div class="col">
          <%= link_to plan_like_path(@plan), method: :delete do %>
            <i class="fa-solid fa-star fa-lg" style="color: #FFD43B;"></i><%= @plan.likes.count %>
          <% end %>
        </div>
        <% else %>
        <div class="col">
          <%= link_to plan_like_path(@plan), method: :post do %>
            <i class="fa-regular fa-star fa-lg" style="color: #3b4674;"></i><%= @plan.likes.count %>
          <% end %>
        <% end %>
        </div>
      </div>


      <% if @plan.user == current_user %>
      <div class="row">
        <div class="col text-center my-3">
          <%= link_to "編集", edit_plan_path, class: "btn btn-warning mx-auto" %>
          <%= link_to "削除", plan_path, method: :delete, class: "btn btn-danger mx-auto", data: { confirm: "投稿を削除しますか？" } %>
        </div>
      </div>
      <% end %>
    </div>

    <!-- コメント一覧 -->
    <% @plan.comments.each do |comment| %>
    <div class="col-sm-8 col-md-10 col-lg-8 bg-white my-3 p-4 shadow-lg mx-auto rounded">
      <div class="row">
        <div class="col-3 text-center">
          <%= image_tag comment.user.get_profile_image(60, 60), class: "rounded-circle mx-auto d-block" %>
          <%= comment.user.name %><br>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class="col text-center my-auto"><%=safe_join(comment.comment.split("\n"),tag(:br)) %></div>
        <% if comment.user == current_user %>
          <%= link_to "削除", plan_comment_path(comment.plan, comment), method: :delete, class: "btn btn-danger my-auto", data: { confirm: "コメントを削除しますか？" } %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

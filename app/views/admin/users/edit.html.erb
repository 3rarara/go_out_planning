<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-10 col-md-8 col-lg-6 my-3 mx-auto">
      <div class="row bg-white rounded-pill p-4">
        <div class="col-3 mx-2 my-auto">
          <%= image_tag @user.get_profile_image(80, 80), class: "rounded-circle ml-auto d-block" %>
        </div>

        <div class="col mx-2 my-auto">
          <div class="row fsize_13-18"><%= @user.name %></div>
          <div class="row fsize_13-18"><%= @user.email %></div>
          <div class="row">
            <div class="col">
              <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
                <%= f.select :is_active, [['有効',true],['無効',false]] %>
              <%= f.submit "変更", class: "btn btn-warning mb-1" %>
              <% end %>

              <div class="col">
                <% if @user.is_active == false %>
                  <%= link_to "ユーザー削除", admin_user_path(@user), method: :delete, class: "btn btn-danger btn-sm mt-3", data: { confirm: "ユーザーを削除しますか？" } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!--プラン一覧を表示-->
      <%= render 'admin/plans/index', plans: @plans %>
    </div>
  </div>
</div>


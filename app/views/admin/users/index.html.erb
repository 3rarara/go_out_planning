<div class="container mx-auto">
  <div class="row">
    <% @users.each do |user| %>

      <div class="col-sm-12 col-md-10 col-lg-8 px-sm-0 bg-white my-3 p-4 shadow-lg mx-auto rounded">
        <div class="row">
          <div class="col-3">
            <%= image_tag user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
            <div class="text-center"><%= link_to user.name, admin_user_path(user) %></div>
          </div>
          <div class="col"><%= user.is_active %></div>
        </div>
      </div>

    <% end %>
  </div>
</div>

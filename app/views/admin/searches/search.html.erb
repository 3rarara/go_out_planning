<div class="container mx-auto">
  <div class="row">
    <div class="col">

      <!--検索対象モデルがUserの時-->
      <% if @range == "User" %>
        <% if @users.present? %>
          <%= render 'admin/users/index', users: @users %>
        <% else %>
        <div class="text-center mt-5">
          検索にヒットしませんでした。
        </div>
        <% end %>

      <!--検索対象モデルがPlanの時-->
      <% elsif @range == "Plan" %>
        <% if @plans.present? %>
          <%= render 'admin/plans/index', plans: @plans %>
        <% else %>
          <div class="text-center mt-5">
            検索にヒットしませんでした。
          </div>
        <% end %>
      <% else %>
        <div class="text-center mt-5">
          検索にヒットしませんでした。
        </div>
      <% end %>

    </div>
  </div>
</div>
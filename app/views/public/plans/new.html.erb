<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-12 col-md-10 col-lg-8 bg-white my-3 p-4 shadow-lg mx-auto">
      <%= render "layouts/errors", object: @plan %>
      <%= form_with model: @plan do |f| %>
      <div class="row">
        <div class="col">
          <%= f.text_field :title, class:"form-control my-3", placeholder: "例) ＊＊県旅行！" %>
          <%= f.text_area :body, class:"form-control my-3", placeholder: "例)御朱印巡りをしました！これで12個目！" %>
        </div>
      </div>

      <%= f.fields_for :plan_details do |plan_detail| %>
      <div class="row">
        <div class="col"><%= plan_detail.text_field :title, class: "form-control", placeholder: "例) ＊＊駅到着" %></div>
        <div class="col"><%= plan_detail.text_field :body, class: "form-control", placeholder: "例) 10:00集合 徒歩3分移動" %></div>
      </div>
      <% end %>

      <div class="row">
        <div class="col text-center">
          <div id="plan_details_wrapper"></div>
          <%= link_to '+', '#', id: 'add_plan_details', class: "btn btn-outline-dark rounded-circle ml-auto shadow" %>
        </div>
      </div>

      <div class="row">
        <div class="col text-center my-3">
          <%= f.submit "投稿", class: "btn btn-success mx-auto" %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
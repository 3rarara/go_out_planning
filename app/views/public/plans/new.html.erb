<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-12 col-md-10 col-lg-8 bg-white my-3 p-4 shadow-lg mx-auto rounded">
      <%= render "layouts/errors", object: @plan %>
      <%= form_with model: @plan do |f| %>
      <%= link_to '下書き一覧', drafts_user_path(current_user) , class: "btn btn-sm btn-warning"%>
      <div class="row">
        <div class="col">
          <h4>プラン概要</h4>
          <%= f.text_field :title, class:"form-control my-3", placeholder: "例) ＊＊県旅行！" %>
          <%= f.text_area :body, class:"form-control my-3", placeholder: "例)御朱印巡りをしました！これで12個目！" %>
        </div>
      </div>

      <h4>スケジュール</h4>
      <%= f.fields_for :plan_details do |plan_detail| %>
      <div class="row">
        <div class="col">
          <%= plan_detail.text_field :title, class: "form-control my-3", placeholder: "例) ＊＊駅(集合場所や施設名など)" %>
          <%= plan_detail.text_area :body, class: "form-control my-3", placeholder: "例) 10:00集合 徒歩3分移動
          移動後＊＊カフェでランチ！" %>
          <%= plan_detail.text_field :address, class: "form-control mb-3", placeholder: "住所" %>
        </div>
      </div>
      <% end %>

      <div class="row">
        <div class="col text-center">
          <div id="plan_details_wrapper"></div>
          <%= link_to '+', '#', id: 'add_plan_details', class: "btn btn-outline-dark rounded-circle mt-3 ml-auto shadow" %>
        </div>
      </div>

      <h4>タグ</h4>
      <%= f.text_field :tags, value: @plan.tags.map(&:name).join(", "), class: "form-control", placeholder: ",で区切ると複数タグ登録できます" %>

      <div class="row">
        <div class="col text-center my-3">
          <button type="submit" class="btn btn-primary mx-auto px-4">
            <i class="fas fa-paper-plane fa-lg" style="color: #ffffff;"></i>
          </button>
          <%= f.submit '下書き保存', class: 'btn btn-warning mx-auto px-4' %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
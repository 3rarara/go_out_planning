<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-12 col-md-11 col-lg-10 bg-white my-3 p-4 shadow-lg">


      <div class="row">
        <div class="col-4">
          <%= image_tag @plan.user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
          <div class="text-center mb-1"><%= link_to @plan.user.name, user_path(@plan.user) %></div>
        </div>
        <div class="col my-auto">
          <h5><%= @plan.title %></h5>
          <%= @plan.body %>
        </div>
      </div>

      <% @plan_details.each do |plan_detail| %>
      <div class="row my-3">
        <div class="col p-3" style="background-color: #CDD3E8;"><%= plan_detail.title %></div>
        <div class="col p-3" style="background-color: #CDD3E8;"><%= plan_detail.body %></div>
      </div>
      <% end %>

      <% if @plan.user == current_user %>
      <div class="row">
        <div class="col text-center my-3">
          <%= link_to "編集", edit_plan_path, class: "btn btn-warning mx-auto" %>
          <%= link_to "削除", plan_path, method: :delete, class: "btn btn-danger mx-auto", data: { confirm: "投稿を削除しますか？" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
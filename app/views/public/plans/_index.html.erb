<div class="container mx-auto">
  <div class="row">
    <% plans.each do |plan| %>

      <div class="col-sm-12 col-md-10 col-lg-8 px-sm-0 bg-white my-3 p-4 shadow-lg mx-auto rounded">
        <div class="row">
          <div class="col-3">
            <%= image_tag plan.user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
            <div class="text-center fsize_13-18"><%= link_to plan.user.name, user_path(plan.user) %></div>
          </div>
          <div class="col mx-4 my-auto">
            <%= link_to plan_path(plan) do %>
              <h5 class="fsize_13-18"><%= plan.title %></h5>
            <% end %>
            <div class="fsize_13-18"><%=safe_join(plan.body.split("\n"),tag(:br)) %></div>
          </div>
        </div>

        <div class="row">
          <div class="col text-center pl-5">
            <% plan.tags.each do |tag| %>
              <i class="fa-sharp fa-solid fa-tag"></i>
              <%= link_to tag.name, search_tag_path(tag_id: tag.id) %>
            <% end %>
          </div>
        </div>

          <div class="row mx-5">
            <!--コメント件数非同期化テンプレート-->
            <div class="col text-center pl-5 comment_counter"><%= render 'public/comments/counter', plan: plan %></div>
            <!--いいね機能非同期化テンプレート-->
            <div class="col text-left like_buttons_<%= plan.id %>"><%= render 'public/likes/like', plan: plan %></div>
          </div>

      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 my-3 p-4 mx-auto rounded">
      <div class="text-center">
        <%= image_tag @user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
        <%= @user.name %>
      </div>

      <div class="row justify-content-center">
        <% @chats.each do |chat| %>
          <% if chat.user == current_user %>
            <div class="col-10 text-right mb-3">
              <div class="says px-3">
                <p><%= safe_join(chat.message.split("\n"), tag(:br)) %></p>
              </div>
              <span class="text-muted"><%= chat.created_at.strftime('%Y/%m/%d %H:%M') %></span>
            </div>
          <% else %>
            <div class="col-10 text-left mb-3">
              <div class="other-user-says px-3">
                <p><%= safe_join(chat.message.split("\n"), tag(:br)) %></p>
              </div>
              <span class="text-muted"><%= chat.created_at.strftime('%Y/%m/%d %H:%M') %></span>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="row justify-content-center">
        <div class="col-10">
          <%= form_with model: @chat, local: true do |f| %>
            <div class="input-group">
              <%= f.hidden_field :room_id %>
              <%= f.text_field :message, class: "form-control", placeholder: "コメントを送信" %>
              <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-paper-plane fa-lg" style="color: #ffffff;"></i>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
  <% plan.comments.each do |comment| %>
  <div class="col bg-white shadow-lg p-1 my-3 rounded">
  <div class="row p-3 rounded mx-auto">

    <div class="col-3 text-center  fsize_13-18">
      <%= image_tag comment.user.get_profile_image(70, 70), class: "rounded-circle mx-auto d-block img-fluid" %>
      <%= comment.user.name %>
      <div class="fsize_10-13 text-center" style="color:#69727B;"><%= comment.created_at.strftime('%Y/%m/%d') %></div>
    </div>
    <div class="col text-center fsize_13-18 my-auto">
      <%= safe_join(comment.comment.split("\n"), tag(:br)) %>
    </div>
  </div>

    <% if comment.user == current_user %>
    <div class="col text-center mb-2">
      <%= link_to plan_comment_path(comment.plan, comment), method: :delete, class: "btn btn-danger", data: { confirm: "コメントを削除しますか？" }, remote: true do %>
        <i class="fa-solid fa-trash fa-lg px-3" style="color: #ffffff;"></i>
      <% end %>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
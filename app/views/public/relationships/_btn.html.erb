<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー解除", user_relationships_path(user), method: :delete, class: options[:class].presence || "btn btn-info btn-sm" %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user), method: :post, class: options[:class].presence || "btn btn-success btn-sm px-4" %>
  <% end %>
<% end %>
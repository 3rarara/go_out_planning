<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-12 col-md-10 col-lg-8 bg-white my-3 p-5 shadow-lg mx-auto rounded">
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col mx-2">
          <h5 class="mb-3">ログイン</h5>

          <%= form_with model: @user, url: user_session_path do |f| %>

            <div class="mb-2">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
            </div>

            <div class="mb-4">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
            </div>

            <div class="row justify-content-cente" >
              <%= f.submit "ログイン", class: "btn btn-warning mx-3 mb-3 btn-form", id: "login_btn" %>
            </div>
          <% end %>

          <div class="row justify-content-center">
            <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-secondary mx-3 mb-3 btn-form", id: "guest_login_btn" %>
          </div>

          <div class="row justify-content-center">
            <%- if devise_mapping.omniauthable? %>
              <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-light btn-sm border btn-form mx-3 mb-3' do %>
              <%= image_tag 'google_logo.png', alt: 'Googleロゴ',size: "30x30", class: 'google-logo mx-3' %>
              Googleでログイン
              <% end %>
            <% end %>
          </div>

          <div class="text-center">
            <%= link_to '新規登録はこちら', '#registrationModal', data: { toggle: 'modal', dismiss: "modal" } %>
          </div>
          <div class="text-center mt-3">
            <%= link_to '管理者はこちら', new_admin_session_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
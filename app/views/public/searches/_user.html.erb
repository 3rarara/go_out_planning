<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-10 col-md-8 col-lg-6 bg-white my-3 p-4 mx-auto rounded-pill">
      <div class="row">

        <div class="col mx-2">
          <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image(90, 90), class: "rounded-circle mx-auto d-block" %>
          <div class="text-center"><%= user.name %></div>
          <% end %>
        </div>

          <% unless user.id == current_user.id && user.email != "guest@example.com" %>
          <div class="col my-auto mx-auto">
            <div class="row text-left relationship_btns_<%= user.id %>">
              <%= render "public/relationships/btn", user: user %>
            </div>
          </div>
          <% end %>

      </div>
    </div>

  </div>
</div>